{
  "type": "page",
  "title": "商品管理",
  "body": [
    {
      "type": "crud",
      "api": {
        "url": "/product/select",
        "method": "POST",
        "dataType": "form"
      },
      "filter": {
        "title": "条件搜索",
        "body": [
          {
            "type": "input-text",
            "name": "id",
            "label": "产品ID"
          },
          {
            "type": "input-text",
            "name": "name",
            "label": "产品名称"
          },
          {
            "type": "input-text",
            "label": "库存数量",
            "name": "num"
          },
          {
            "type": "select",
            "name": "category",
            "options": [
              {
                "label": "新鲜果蔬",
                "value": 1
              },
              {
                "label": "禽肉蛋奶",
                "value": "2"
              },
              {
                "label": "水产冷冻",
                "value": "3"
              },
              {
                "label": "休闲食品",
                "value": "4"
              },
              {
                "label": "酒水饮料",
                "value": "5"
              },
              {
                "label": "男装",
                "value": "6"
              },
              {
                "label": "女装",
                "value": "7"
              },
              {
                "label": "男鞋",
                "value": "8"
              },
              {
                "label": "女鞋",
                "value": "9"
              },
              {
                "label": "童装",
                "value": "10"
              },
              {
                "label": "办公图书",
                "value": "11"
              },
              {
                "label": "电子数码",
                "value": "12"
              },
              {
                "label": "美妆护肤",
                "value": "13"
              },
              {
                "label": "日用百货",
                "value": "14"
              },
              {
                "label": "母婴玩具",
                "value": "15"
              }
            ],
            "label": "商品类型"
          },
          {
            "type": "input-datetime-range",
            "name": "time_range",
            "label": "上架日期范围",
            "ranges": "today,yesterday,1dayago,7daysago,prevweek,thismonth,prevmonth"
          },
          {
            "type": "radios",
            "name": "flag",
            "options": [
              {
                "label": "有效",
                "value": 0
              },
              {
                "label": "被删除",
                "value": 1
              }
            ],
            "submitOnChange": true,
            "value": 0
          }
        ],
        "autoFocus": false
      },
      "columns": [
        {
          "name": "id",
          "label": "商品ID",
          "type": "text"
        },
        {
          "name": "img",
          "label": "商品图片",
          "type": "image"
        },
        {
          "type": "text",
          "label": "商品名",
          "name": "name"
        },
        {
          "type": "mapping",
          "label": "商品类型",
          "name": "category",
          "map": {
            "1": "新鲜果蔬",
            "2": "禽肉蛋奶",
            "3": "水产冷冻",
            "4": "休闲食品",
            "5": "酒水饮料",
            "6": "男装",
            "7": "女装",
            "8": "男鞋",
            "9": "女鞋",
            "10": "童装",
            "11": "办公图书",
            "12": "电子数码",
            "13": "美妆护肤",
            "14": "日用百货",
            "15": "母婴玩具",
            "*": "无"
          }
        },
        {
          "type": "text",
          "label": "库存数量",
          "name": "num"
        },
        {
          "type": "text",
          "label": "商品价格",
          "name": "price"
        },
        {
          "type": "operation",
          "label": "操作",
          "buttons": [
            {
              "label": "添加秒杀活动",
              "type": "button",
              "actionType": "dialog",
              "level": "warning",
              "dialog": {
                "title": "秒杀活动",
                "body": [
                  {
                    "type": "form",
                    "api": {
                      "url": "/activity/add",
                      "method": "POST",
                      "dataType": "form"
                    },
                    "rules": [
                      {
                        "rule": "${product_id == id}",
                        "message": "商品的id错误",
                        "name": [
                          "product_id"
                        ]
                      },
                      {
                        "rule": "${product_num <= num}",
                        "message": "参与秒杀商品数量不能超过已上架商品数量",
                        "name": [
                          "product_num"
                        ]
                      },
                      {
                        "rule": "${product_price < price}",
                        "message": "参与秒杀商品价格必须小于已上架商品价格",
                        "name": [
                          "product_price"
                        ]
                      },
                      {
                        "rule": "${product_num != 0}",
                        "message": "商品的数量不能为0",
                        "name": [
                          "product_num"
                        ]
                      },
                      {
                        "rule": "${product_num != 0}",
                        "message": "商品的价格不能为0",
                        "name": [
                          "product_price"
                        ]
                      },
                      {
                        "rule": "${last>0 && last<24}",
                        "message": "持续时间在一天内",
                        "name": [
                          "last"
                        ]
                      }
                    ],
                    "body": [
                      {
                        "type": "input-text",
                        "label": "商品ID",
                        "name": "product_id",
                        "required": true,
                        "hint": "id为: $id"
                      },
                      {
                        "type": "static",
                        "label": "商品名称",
                        "name": "name"
                      },
                      {
                        "type": "static",
                        "label": "商品原价",
                        "name": "price"
                      },
                      {
                        "type": "static",
                        "label": "商品图片",
                        "name": "img"
                      },
                      {
                        "type": "input-text",
                        "label": "秒杀活动商品数量",
                        "name": "product_num",
                        "required": true,
                        "hint": "不能超过$num个,大于0"
                      },
                      {
                        "label": "秒杀活动商品价格",
                        "type": "input-text",
                        "name": "product_price",
                        "required": true,
                        "hint": "必须小于$price元,大于0"
                      },
                      {
                        "label": "秒杀活动持续时间",
                        "type": "input-text",
                        "name": "last",
                        "required": true,
                        "hint": "单位为小时,必须为整数,大于0,小于24"
                      }
                    ]
                  }
                ],
                "type": "dialog"
              },
              "visibleOn": "${flag==0}"
            },
            {
              "label": "编辑",
              "type": "button",
              "actionType": "dialog",
              "level": "link",
              "dialog": {
                "title": "编辑",
                "body": {
                  "type": "form",
                  "api": {
                    "url": "/product/update",
                    "method": "POST",
                    "dataType": "form"
                  },
                  "rules": [
                    {
                      "rule": "${num != 0}",
                      "message": "商品的数量不能为0",
                      "name": [
                        "num"
                      ]
                    },
                    {
                      "rule": "${price != 0}",
                      "message": "商品的价格不能为0",
                      "name": [
                        "price"
                      ]
                    }
                  ],
                  "body": [
                    {
                      "type": "static",
                      "name": "id",
                      "label": "商品ID"
                    },
                    {
                      "label": "是否有效",
                      "type": "select",
                      "required": true,
                      "name": "flag",
                      "options": [
                        {
                          "label": "有效",
                          "value": 0
                        },
                        {
                          "label": "无效",
                          "value": 1
                        }
                      ]
                    },
                    {
                      "type": "input-text",
                      "name": "name",
                      "required": true,
                      "label": "商品名称"
                    },
                    {
                      "label": "库存数量",
                      "type": "input-text",
                      "name": "num",
                      "required": true,
                      "hint": "商品的数量不能为0"
                    },
                    {
                      "label": "商品价格",
                      "type": "input-text",
                      "name": "price",
                      "required": true,
                      "hint": "商品的价格不能为0"
                    },
                    {
                      "label": "商品简介",
                      "type": "input-text",
                      "name": "detail",
                      "required": true
                    },
                    {
                      "label": "商品类型",
                      "type": "select",
                      "required": true,
                      "name": "category",
                      "options": [
                        {
                          "label": "新鲜果蔬",
                          "value": "1"
                        },
                        {
                          "label": "禽肉蛋奶",
                          "value": "2"
                        },
                        {
                          "label": "水产冷冻",
                          "value": "3"
                        },
                        {
                          "label": "休闲食品",
                          "value": "4"
                        },
                        {
                          "label": "酒水饮料",
                          "value": "5"
                        },
                        {
                          "label": "男装",
                          "value": "6"
                        },
                        {
                          "label": "女装",
                          "value": "7"
                        },
                        {
                          "label": "男鞋",
                          "value": "8"
                        },
                        {
                          "label": "女鞋",
                          "value": "9"
                        },
                        {
                          "label": "童装",
                          "value": "10"
                        },
                        {
                          "label": "办公图书",
                          "value": "11"
                        },
                        {
                          "label": "电子数码",
                          "value": "12"
                        },
                        {
                          "label": "美妆护肤",
                          "value": "13"
                        },
                        {
                          "label": "日用百货",
                          "value": "14"
                        },
                        {
                          "label": "母婴玩具",
                          "value": "15"
                        }
                      ]
                    },
                    {
                      "type": "input-image",
                      "name": "img",
                      "label": "商品图片: 只支持.jpg,.png,.jpeg格式的图片",
                      "receiver": "/uploadimg",
                      "required": true
                    }
                  ]
                }
              }
            },
            {
              "label": "查看",
              "type": "button",
              "actionType": "dialog",
              "level": "link",
              "dialog": {
                "title": "查看商品详情",
                "body": {
                  "type": "form",
                  "api": {
                    "url": "/product/select",
                    "method": "POST",
                    "dataType": "form"
                  },
                  "body": [
                    {
                      "name": "img",
                      "label": "商品图片",
                      "type": "image"
                    },
                    {
                      "type": "static",
                      "label": "商品名",
                      "name": "name"
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "static",
                      "label": "商品简介",
                      "name": "detail"
                    },
                    {
                      "type": "static",
                      "label": "商品上架时间",
                      "name": "create_time"
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "label": "删除",
              "actionType": "ajax",
              "level": "link",
              "className": "text-danger",
              "confirmText": "确定要删除？",
              "api": {
                "url": "/product/delete?id=${id}",
                "method": "GET"
              },
              "visibleOn": "${flag==0}"
            },
            {
              "type": "button",
              "label": "恢复",
              "actionType": "ajax",
              "confirmText": "确定要恢复？",
              "api": {
                "url": "/product/update",
                "method": "POST",
                "dataType": "form",
                "data": {
                  "id": "${id}",
                  "flag": 0
                }
              },
              "placeholder": "-",
              "size": "sm",
              "level": "default",
              "visibleOn": "${flag==1}"
            }
          ]
        }
      ],
      "headerToolbar": [
        "switch-per-page",
        {
          "label": "新增",
          "type": "button",
          "actionType": "dialog",
          "level": "primary",
          "dialog": {
            "title": "新增",
            "body": [
              {
                "type": "form",
                "api": {
                  "url": "/product/add",
                  "method": "POST",
                  "dataType": "form"
                },
                "rules": [
                  {
                    "rule": "${num != 0}",
                    "message": "商品的数量不能为0",
                    "name": [
                      "num"
                    ]
                  },
                  {
                    "rule": "${price != 0}",
                    "message": "商品的价格不能为0",
                    "name": [
                      "price"
                    ]
                  }
                ],
                "body": [
                  {
                    "type": "input-text",
                    "name": "name",
                    "label": "商品名称",
                    "required": true
                  },
                  {
                    "type": "select",
                    "name": "category",
                    "label": "商品类型",
                    "options": [
                      {
                        "label": "新鲜果蔬",
                        "value": 1
                      },
                      {
                        "label": "禽肉蛋奶",
                        "value": "2"
                      },
                      {
                        "label": "水产冷冻",
                        "value": "3"
                      },
                      {
                        "label": "休闲食品",
                        "value": "4"
                      },
                      {
                        "label": "酒水饮料",
                        "value": "5"
                      },
                      {
                        "label": "男装",
                        "value": "6"
                      },
                      {
                        "label": "女装",
                        "value": "7"
                      },
                      {
                        "label": "男鞋",
                        "value": "8"
                      },
                      {
                        "label": "女鞋",
                        "value": "9"
                      },
                      {
                        "label": "童装",
                        "value": "10"
                      },
                      {
                        "label": "办公图书",
                        "value": "11"
                      },
                      {
                        "label": "电子数码",
                        "value": "12"
                      },
                      {
                        "label": "美妆护肤",
                        "value": "13"
                      },
                      {
                        "label": "日用百货",
                        "value": "14"
                      },
                      {
                        "label": "母婴玩具",
                        "value": "15"
                      }
                    ],
                    "required": true
                  },
                  {
                    "type": "input-text",
                    "name": "num",
                    "label": "商品数量",
                    "required": true,
                    "hint": "商品的数量不能为0"
                  },
                  {
                    "type": "input-text",
                    "name": "price",
                    "label": "商品价格",
                    "required": true,
                    "hint": "商品的价格不能为0"
                  },
                  {
                    "type": "input-text",
                    "label": "商品简介",
                    "name": "detail",
                    "required": true
                  },
                  {
                    "type": "input-image",
                    "name": "img",
                    "label": "商品图片:只支持.jpg,.png,.jpeg格式的图片",
                    "receiver": "/uploadimg",
                    "required": true
                  }
                ]
              }
            ],
            "type": "dialog"
          }
        }
      ],
      "perPageAvailable": [
        10,
        20,
        50
      ],
      "mode": "table",
      "footerToolbar": [
        "statistics",
        "pagination"
      ]
    }
  ]
}