                "api": {
                  "url": "http://localhost:8080/product/delete?ID=${id}",
                  "method": "GET"
                }
              }
            ]
          }
        ],
        "bulkActions": [
          {
            "type": "button",
            "level": "danger",
            "label": "批量删除",
